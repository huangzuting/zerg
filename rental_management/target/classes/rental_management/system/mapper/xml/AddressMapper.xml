<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rental_management.system.mapper.AddressMapper">
	<resultMap type="rental_management.system.bean.Address" id="address">
		<id property="id" column="id" />
		<result property="location" column="location" />
		<result property="pid" column="pid" />
		<result property="levelJudge" column="level_judge" />

	</resultMap>
	<select id="selectId" resultMap="address"
		parameterType="int">
		select id,location,pid,level_judge from gd_address_tree where id=#{id}
	</select>
	<select id="selectPid" resultMap="address"
		parameterType="int">
		select id,location,pid,level_judge from gd_address_tree where pid=#{pid}
	</select>
	<select id="selectName" resultMap="address"
		parameterType="string">
		select id,location,pid,level_judge from gd_address_tree where
		location=#{name}
	</select>
	<select id="selectLevel" parameterType="int" resultMap="address">
	    select id,location from gd_address_tree where level_judge=#{level}
	</select>
	
	
	<select id="selects" parameterType="string"  resultMap="address">
	    select id,location,pid,level_judge from gd_address_tree where
		<foreach collection="array" item="i" open=" " separator="=" close=" " >
		#{i}
		</foreach>
	</select>
	
	
	<insert id="add" parameterType="rental_management.system.bean.Address">
		insert into gd_address_tree(location,pid,level_judge) values(
		#{location,jdbcType=VARCHAR},
		#{pid,jdbcType=NUMERIC},
		#{levelJudge,jdbcType=NUMERIC}
		)
	</insert>
	<update id="update" parameterType="rental_management.system.bean.Address">
		update gd_address_tree set
		location= #{location,jdbcType=VARCHAR},
		pid=#{pid,jdbcType=NUMERIC},
		level_judge=#{levelJudge,jdbcType=NUMERIC}
		where id=#{id}
	</update>
	<delete id="delete" parameterType="int">
		delete from gd_address_tree where id=#{id}
	</delete>
</mapper>